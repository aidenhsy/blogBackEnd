<!DOCTYPE html>
<html lang="en">
  <%-include("layouts/header");%>

  <body>
    <!-- Navigation -->
    <%-include("layouts/navbar");%>

    <!-- Page Header -->
    <header class="masthead" style="background-image: url('<%=post.image%>')">
      <div class="overlay"></div>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-heading">
              <h1><%=post.title%></h1>
              <span class="meta"
                >Posted by
                <a href="#">Start Bootstrap</a>
                on <%=post.datePosted.toDateString()%></span
              >
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Post Content -->
    <article>
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <p><%=post.body%></p>
          </div>
        </div>
      </div>
    </article>

    <hr />

    <%-include("layouts/footer");%> <%-include("layouts/scripts");%>
  </body>
</html>
